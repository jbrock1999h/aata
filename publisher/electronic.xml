<!-- Publisher file for publicly-hosted version at  abstract.ups.edu -->
<!-- Also used for electronic PDF versions.  Any modifications meant -->
<!-- for print PDFs should be made in publisher/public-print.xsl,    -->
<!-- otherwise the two publisher files should be similar/identical   -->
<!-- for common aspects.                                             -->

<publication>

    <source>
        <version include="sage-blurb"/>
        <directories external="../external" generated="../images"/>
    </source>

    <common>
        <tableofcontents level="2"/>
        <exercise-divisional hint="no"/>
    </common>

    <numbering>
        <divisions level="2"/>
        <blocks    level="1"/>
        <equations level="1"/>
        <footnotes level="0"/>
    </numbering>

    <!-- Makes hyperlinks, program listings, etc. active and colored -->
    <!-- (This is the default, but set here just to be explicit)     -->
    <!-- PDF-only is wider, eg better for Sage material              -->
    <!-- Default is "letterpaper", we could fine-tune margins        -->
    <!-- 1.25 inch side margins, 0.75 inch top/bottom                -->
    <!-- N.B. Keep sync'ed with public.xml publication file.         -->
    <latex print="no" font-size="11">
        <page>
            <geometry>left=1.25in,right=1.25in,top=0.75in,bottom=0.75in,headsep=0.25in</geometry>
        </page>
    </latex>

    <html>
        <!-- counteract arbitrary default, in part since -->
        <!-- examples are not authored with titles       -->
        <knowl example="no"/>
        <analytics statcounter-project="10568106"
                   statcounter-security="510ba080"/>
         <!-- trailing slash will be added, if not authored -->
        <baseurl href="http://abstract.ups.edu/aata/"/>
        <index-page ref="aata"/>
    </html>

</publication>
